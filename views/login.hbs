<div class="my-40 mx-auto w-7/12 text-black uppercase text-lg p-4 rounded-lg text-yellow-400 leading-loose">
  <form action="/user/login" method="POST">
    {{#if error}}
      <p class="text-sm pl-2">{{error}}</p>
    {{/if}}
    <label class="pl-2">Email</label>
    <input type="text" name="email" placeholder="Email" class="block w-full m-1 rounded-lg p-1 mb-4">
    <label class="pl-2">Пароль</label>
    <input type="password" name="password" placeholder="Пароль" class="block w-full m-1 rounded-lg p-1 mb-4">
    <button name="buttonSignIn" type="submit"
      class="inline-block w-full px-6 py-2 mx-1 rounded-lg text-xl text-red-700 font-bold font-medium leading-6 text-center text-white  transition bg-yellow-500 shadow ripple hover:shadow-lg hover:bg-yellow-600 focus:outline-none">Войти</button>
</div>
</form>
</div>
